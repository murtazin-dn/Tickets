<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    Text-->

    <style name="TextAppearance.AppCompat.BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.AppCompat.BaseText.Title1">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.AppCompat.BaseText.Title2">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.AppCompat.BaseText.Title3">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.BaseText.Title4">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.AppCompat.BaseText.Text1">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.BaseText.Text2">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.AppCompat.BaseText.ButtonText1">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.BaseText.TabText2">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>
    
<!--    EditText-->
    <style name="Base.Widget.AppCompat.EditText.CustomEditText">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

<!--    Chip-->
    <style name="Widget.MaterialComponents.Chip.Action.CustomChip">
        <item name="chipBackgroundColor">@color/grey3</item>
        <item name="chipIconSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

<!--    Toolbar-->
    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/grey2</item>
        <item name="titleTextAppearance">@style/TitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/SubTitleTextAppearance</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/grey6</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>